<table class="table">
  <thead>
    <th>Date</th>
    <th>Steps</th>
  </thead>
  <tbody>
    {{#each activities}}
      <tr>
        <td {{#if steps_count}} class='show-by-hour' {{/if}}>
          {{date}}
        </td>
        <td>{{steps_count}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
